{
  "name": "telegram-bot-cloudflare-worker",
  "version": "1.0.0",
  "description": "A comprehensive TypeScript library for building Telegram bots on Cloudflare Workers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint",
    "release": "npm run prepublishOnly && npm publish",
    "docs:dev": "typedoc --watch",
    "docs:build": "typedoc"
  },
  "keywords": [
    "telegram",
    "bot",
    "cloudflare",
    "workers",
    "typescript",
    "api",
    "webhook",
    "serverless",
    "edge",
    "telegram-bot-api"
  ],
  "author": "Saikothasan <saikothouse@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saikothasan/Telegram-Bot-Cloudflare-Worker.git"
  },
  "bugs": {
    "url": "https://github.com/saikothasan/Telegram-Bot-Cloudflare-Worker/issues"
  },
  "homepage": "https://github.com/saikothasan/Telegram-Bot-Cloudflare-Worker#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}

